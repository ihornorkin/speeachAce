.headroom
	transition transform .35s ease-in-out
	will-change transform

	&--pinned
		transform translateY(0)

	&--unpinned
		transform translateY(-100%)

.intro-section
	display block
	position relative
	retina('../images/background-n-1.png', 3, cover, center center no-repeat)

	&::after
		backface-visibility hidden
		background white
		content ''
		display block
		height 20%
		left 0
		position absolute
		right 0
		top 100%
		transform skewY(-2.6deg)
		transform-origin 0 100%

		@media (min-width hd)
			display none

	&__nav
		&--fixed
			left 0
			position fixed
			right 0
			top 0
			z-index 999

	&__img-map
		left 0
		position absolute
		right 0
		top 12.4rem
		width 100%
		z-index 1

		@media (max-width tablet-down)
			top 22.5rem

		img
			height 96.1rem
			max-width 30%
			min-width 85%
			//object-fit cover

			@media (max-width 1680px)
				min-width 100%
				object-fit cover

			@media (max-width tablet-down)
				height 58.6rem
				min-width 100%
				object-fit cover

	&__description
		margin-bottom 35.7rem
		padding-top 24rem
		position relative
		z-index 8

		@media (max-width tablet-down)
			margin-bottom 10.7rem
			padding-top 15rem

		h1,
		h2
			text-transform uppercase

		h1
			color white
			font-size 6rem
			line-height 1.0
			margin-bottom 2.3rem
			text-align center

			@media (max-width tablet-down)
				margin-bottom 0
				font-size 5.2rem
				font-weight normal

		h2
			color spring-green
			font-size 3.6rem
			font-weight 800
			letter-spacing 7.2px
			line-height 1.67
			text-align center

			@media (max-width tablet-down)
				line-height 1.33
				font-size 3rem
				letter-spacing 0.2em

	&__buttons
		align-items center
		bottom 34rem
		display flex
		flex-direction row
		justify-content center
		margin-top 2rem
		position relative
		z-index 1

		@media (max-width tablet-down)
			flex-direction column
			top -2rem

		.btn
			margin 0 1.5rem
			min-width 24rem
			text-transform uppercase

			@media (max-width tablet-down)
				margin-bottom 1.6rem
