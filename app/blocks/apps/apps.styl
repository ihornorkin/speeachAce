.apps
	display block
	position relative
	z-index 1
	overflow hidden

	&__top-description
		margin-bottom 0
		margin-top 3.8rem

		@media (max-width mobile)
			margin-bottom 3.1rem
			margin-top 5.4rem

	&__preview
		margin 0 auto 5rem
		max-width 90rem
		width 100%

		@media (max-width tablet)
			margin-bottom 0

		.preview__items-wrapper
			display block
			flex-direction row
			justify-content space-between

			.slick-track

				.preview__item:last-child

					.controls__line
						display none

			@media (max-width tablet)
				margin-bottom 0

			.slick-list
				padding 5rem 0 0rem 0

		.controls
			display block
			justify-content space-between

			.slick-list
				height 50px !important
				padding-top 2rem

			@media (max-width tablet-down)
				display none

	&__download
		margin-bottom 2.3rem
		display flex
		margin-left auto
		margin-right auto
		max-width 80rem
		justify-content space-around

		@media (max-width mobile)
			margin-bottom 3rem
			flex-wrap wrap

		a
			@media (max-width mobile)
				display inline-block
				margin-bottom 1rem

	&__bottom-description
		margin-bottom 2.4rem

		@media (max-width tablet)
			padding-top 1rem

		h3
			margin-bottom 2.5rem

			@media (max-width tablet-down)
				margin-bottom 3rem

		p
			font-weight 500

		.checked-list
			@media (max-width tablet-down)
				margin-top 2.6rem
