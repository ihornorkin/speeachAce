.apps
	display block
	position relative
	z-index 1
	overflow hidden

	&__top-description
		margin-bottom 0
		margin-top 3.8rem

		@media (max-width mobile)
			margin-bottom 3.1rem
			margin-top 5.4rem

	&__preview
		margin 0 auto 5rem
		max-width 90rem
		width 100%

		@media (max-width tablet-down)
			margin-bottom 4rem

		.preview__items-wrapper
			display block
			flex-direction row
			justify-content space-between

			.slick-list
				padding 5rem 0 4rem 0

		.controls
			display block
			justify-content space-between

			.slick-list
				padding-top 2rem

			@media (max-width tablet-down)
				display none

	&__download
		margin-bottom 2.3rem

		@media (max-width mobile)
			margin-bottom 3rem

	&__bottom-description
		margin-bottom 2.4rem

		h3
			margin-bottom 2.5rem

			@media (max-width tablet-down)
				margin-bottom 3rem

		p
			font-weight 500

		.checked-list
			@media (max-width tablet-down)
				margin-top 2.6rem
