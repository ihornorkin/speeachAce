.our-team
	display block
	position relative
	retina('../images/background-team.png', 3, cover, center center no-repeat)

	.section-heading
		margin-top 23.1rem

		@media (max-width tablet)
			margin-bottom 1.7rem
			margin-top 31.8rem

		h2
			line-height .6

	&__img-map
		overflow hidden
		left 0
		position absolute
		right 0
		top 62rem
		width 100%
		z-index 0

		@media(max-width tablet-down)
			bottom -7.6rem
			top auto

		img
			display block
			height auto
			margin 0 auto
			max-width 100%
			object-fit cover

	&__top-description
		position relative

		h3
			color white
			margin-bottom 3.2rem
			margin-top 0

	&__team-gallery
		margin-bottom 4.8rem
		position relative

	&__bottom-description
		margin-bottom 6.1rem
		position relative

		@media (max-width tablet-down)
			margin-bottom 5.5rem

		p
			color white
			margin-bottom 2.4rem

	&__contact-btn
		margin-bottom 9.6rem
		position relative

		@media (max-width tablet-down)
			margin-bottom 5.6rem

		.btn
			min-width 28rem
