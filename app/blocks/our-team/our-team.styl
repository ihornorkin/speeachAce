.our-team
	display block
	position relative
	retina('../images/background-team.png', 3, cover, center center no-repeat)

	@media (max-width tablet-down)
		&:before
			content ''
			position absolute
			bottom -184px
			left: 50%
			transform translateX(-50%)
			width 100%
			height 414px
			background-image url(../images/world-map-top.png);
			background-repeat no-repeat
			background-position center
			background-size cover

	.section-heading
		margin-top 23.1rem

		@media (max-width tablet)
			margin-bottom 1.7rem
			margin-top 31.8rem

		h2
			line-height .6

	&__img-map
		overflow hidden
		left 0
		position absolute
		right 0
		top 62rem
		width 100%
		z-index 0

		@media(max-width tablet-down)
			overflow visible
			width 100%
			bottom 0
			display block
			top auto

		img
			display block
			height auto
			margin 0 auto
			max-width 100%
			object-fit cover

			@media (max-width tablet-down)
				height 100%
				position relative
				top 22rem
				display none

	&__top-description
		position relative

		h3
			color white
			margin-bottom 3.2rem
			margin-top 0

	&__team-gallery
		margin-bottom 4.8rem
		position relative

	&__bottom-description
		margin-bottom 6.1rem
		position relative

		@media (max-width tablet-down)
			margin-bottom 5.5rem

		p
			color white
			margin-bottom 2.4rem

	&__contact-btn
		margin-bottom 9.6rem
		position relative

		@media (max-width tablet-down)
			margin-bottom 5.6rem

		.btn
			min-width 28rem
			text-transform uppercase
