.management-system
	position relative
	overflow hidden
	retina('../images/oj-8-xyy-1-converted.png', 3, 1383px 530px, center 101% duck-egg-blue no-repeat)

	@media (max-width tablet-down)
		retina('../images/oj-8-xyy-1-converted.png', 3, 1383px 530px, center 108% duck-egg-blue no-repeat)
		overflow visible

	&::before
		backface-visibility hidden
		background white
		bottom 100%
		content ''
		display block
		height 100%
		left 0
		position absolute
		right 0
		transform skewY(2.9deg)
		transform-origin 0 100%

	@media (min-width hd)
		display none

	&::after
		backface-visibility hidden
		background white
		content ''
		display block
		height 100%
		left 0
		position absolute
		right 0
		top 100%

		@media (min-width hd)
			display none
	&::after
		transform skewY(-4.4deg)
		transform-origin 0 100%

	&__top-description
		margin-bottom 2rem
		margin-top 9.7rem

		@media (max-width tablet-down)
			margin-bottom 0

		h3
			margin 0
			position relative
			top -1.2rem

	.section-heading h2
		@media (max-width 390px)
			font-size 4.5rem


	.section-heading__heading
		display inline-block
		max-width 60rem
		@media (max-width 390px)
			font-size 3.5rem

	&__logos
		clearfix()
		margin-bottom 4.8rem

		@media (max-width tablet-down)
			margin-bottom 1rem

	&__main
		margin-bottom 3.8rem

		iframe
			width 50rem

			@media (max-width 992px)
				margin 0 auto
				display block

			@media (max-width tablet-down)
				width 100% !important
				margin 0 auto

			@media (max-width mobile)
				width 100% !important
				height auto

		.container
			padding 0;

	&__video-wrapper
		display inline-block
		border-radius 20px
		position relative
		cursor pointer

		&:before
			content ""
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background-color #01ade9
			opacity 0
			border-radius 20px
			transition all .4s

		.img-responsive
			max-width 125%
			box-shadow 0px 5px 25px 0px rgba(0, 53, 118, 0.25)
			border-radius: 20px;

			@media (max-width 1300px)
				position static
				max-width 100%

			@media (max-width tablet-down)
				position static
				max-width 100%

		@media (max-width tablet-down)
			margin-bottom 9.4rem

	&__img-wrapper
		retina('../images/lines.png', 3, 688px 446px, center center no-repeat)

	.checked-list
		margin-top 3.5rem

		@media (max-width tablet-down)
			margin-top 1rem

	.play-button
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		margin auto
		opacity 0
		transform scale(1.2)
		transition all .4s

	&__btn-group
		clearfix()
		display flex
		flex-wrap wrap
		justify-content center
		margin-bottom 16.5rem
		position relative
		z-index 10

		@media (max-width tablet-down)
			bottom -9.5rem
			left 0
			margin-bottom 0
			position absolute
			right 0

		.btn
			margin 0 1.5rem
			width 28rem
			text-transform uppercase

			@media (max-width tablet-down)
				margin .8rem 1.5rem
				text-transform uppercase

.management-system__video-wrapper

	&:hover

		.play-button
			opacity 1
			transform scale(1.0)

		&:before
			opacity: .6
