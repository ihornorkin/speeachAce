.team-gallery
	display flex
	flex-direction row
	flex-wrap wrap

	@media (max-width mobile)
		align-items center
		flex-direction column

	&__item
		border-radius 1rem
		padding 1.2rem 1.6rem
		position relative
		transition transform .3s ease-in-out
		width 25%
		z-index 1

		@media (max-width tablet)
			width 50%

		@media (max-width mobile)
			max-width 30.2rem
			width 100%

		&:hover
			.team-gallery__person-info
				opacity 1
				transform scale(1)
				visibility visible

			.team-gallery__name,
			.team-gallery__position
				transform translateY(0)

	&__wrapper
		width 26.8rem
		height 26.2rem
		border-radius 1.5rem
		overflow hidden
		position relative

		@media(max-width 1200px)
			width 22.8rem
			height 22.2rem

		@media(max-width 995px)
			width 100%
			height 100%

		@media(max-width tablet)
			border-radius 2rem

		img
			display block
			height 100%
			max-width 100%
			width 100%

	&__person-info
		align-items center
		background-color bright-cyan-85
		bottom 0
		color white
		display flex
		flex-direction column
		justify-content space-between
		left 0
		opacity 0
		padding 7.5rem 4.5rem
		position absolute
		right 0
		top 0
		transform scale(.2)
		transition all .2s ease-in-out
		visibility hidden

	&__name,
	&__position
		color white
		transition all .2s ease
		transition-delay .3s

	&__name
		font-size 24px
		font-weight normal
		transform translateX(-200%)
		text-align center

	&__position
		font-size 1.6rem
		font-weight 500
		transform translateX(200%)
		text-align center


